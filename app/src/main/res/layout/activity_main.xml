<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/colorPrimaryDark"
	android:fitsSystemWindows="true"
	tools:context="wtf.matsem.bolt.ui.main.MainActivity">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center"
		android:orientation="vertical"
		android:paddingEnd="24dp"
		android:paddingLeft="24dp"
		android:paddingRight="24dp"
		android:paddingStart="24dp">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:orientation="vertical">

			<TextView
				android:id="@+id/realcurrency_velocity_text"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:ellipsize="end"
				android:gravity="start"
				android:maxLines="1"
				android:text="@string/currency_czk"
				android:textColor="@color/cyan"
				android:textSize="24sp"
				android:textStyle="bold" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_vertical"
				android:orientation="horizontal">

				<ImageView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/ic_payment"
					android:tint="@color/cyan" />

				<EditText
					android:id="@+id/czk_edittext"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="16dp"
					android:background="@android:color/transparent"
					android:gravity="start"
					android:hint="@string/edittext_hint"
					android:includeFontPadding="false"
					android:inputType="numberDecimal"
					android:selectAllOnFocus="true"
					android:textColor="@color/cyan"
					android:textColorHighlight="@color/cyan_alpha"
					android:textColorHint="@color/cyan_alpha"
					android:textCursorDrawable="@null"
					android:textSize="48sp"
					android:textStyle="bold"
					tools:text="48.0" />

			</LinearLayout>

		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_marginTop="16dp"
			android:orientation="vertical">

			<TextView
				android:id="@+id/bolt_velocity_text"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:ellipsize="end"
				android:gravity="start"
				android:maxLines="1"
				android:text="@string/currency_bolt"
				android:textColor="@color/pink_carmine"
				android:textSize="24sp"
				android:textStyle="bold" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_vertical"
				android:orientation="horizontal">

				<ImageView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/ic_bolt"
					android:tint="@color/pink_carmine" />

				<EditText
					android:id="@+id/bolt_edittext"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="16dp"
					android:background="@android:color/transparent"
					android:gravity="start"
					android:hint="@string/edittext_hint"
					android:includeFontPadding="false"
					android:inputType="numberDecimal"
					android:selectAllOnFocus="true"
					android:textColor="@color/pink_carmine"
					android:textColorHighlight="@color/pink_carmine_alpha"
					android:textColorHint="@color/pink_carmine_alpha"
					android:textCursorDrawable="@null"
					android:textSize="48sp"
					android:textStyle="bold"
					tools:text="1.0" />
			</LinearLayout>

		</LinearLayout>

		<TextView
			android:id="@+id/top_up_button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="start"
			android:layout_marginTop="32dp"
			android:text="@string/top_up"
			android:textAllCaps="true"
			android:textColor="@color/pink_carmine"
			android:textSize="18sp"
			android:textStyle="bold" />

		<TextView
			android:id="@+id/bolt_rate_button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="start"
			android:layout_marginTop="16dp"
			android:text="@string/bolt_rate_text"
			android:textAllCaps="true"
			android:textColor="@color/pink_carmine"
			android:textSize="12sp"
			android:textStyle="bold" />

	</LinearLayout>
</FrameLayout>
